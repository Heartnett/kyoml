{
  "name": "kyoml",
  "version": "0.0.2",
  "description": "A pluggable dynamic markup language",
  "main": "dist/index.js",
  "scripts": {
    "prepublish": "npm run build",
    "pegjs": "pegjs grammar.pegjs",
    "pretest": "npm run pegjs",
    "test": "ava --verbose",
    "test:coverage": "nyc npm run test",
    "build": "tsc",
    "prebuild": "npm run pegjs",
    "postbuild": "cp ./grammar.js ./dist",
    "codecov": "codecov"
  },
  "author": "",
  "license": "ISC",
  "ava": {
    "extensions": [
      "js"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "index.ts",
      "lib/**/*.ts"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/node": "^14.14.34",
    "ava": "^3.15.0",
    "nyc": "^15.1.0",
    "pegjs": "^0.10.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "lodash.get": "^4.4.2"
  }
}
